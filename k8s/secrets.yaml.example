# Kubernetes Secret for Mamba Server
# Copy this file to secrets.yaml and fill in your values
# DO NOT commit the actual secrets.yaml file to version control
#
# To create the secret:
#   kubectl apply -f k8s/secrets.yaml
#
# Alternatively, create secrets from literals:
#   kubectl create secret generic mamba-secrets \
#     --from-literal=openai-api-key=sk-your-key-here \
#     --from-literal=api-key=your-api-key-here
#
apiVersion: v1
kind: Secret
metadata:
  name: mamba-secrets
  labels:
    app: mamba-server
    app.kubernetes.io/name: mamba-server
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # Required: OpenAI API key
  openai-api-key: "sk-your-openai-api-key-here"

  # Optional: API key for api_key auth mode
  api-key: "your-api-key-here"

  # Optional: JWT secret for jwt auth mode
  jwt-secret: "your-jwt-secret-here"
